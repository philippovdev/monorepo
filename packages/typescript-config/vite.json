{
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "paths": {
      "@repo/ui": ["packages/ui/index.ts"],
      "@repo/unocss": ["packages/ui/unocss/unocss.config.js"],
      "@repo/ui/*": ["packages/ui/*"]
    }
  },
  "exclude": ["node_modules"]
}
