{
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "paths": {
      "@onvp/ui": ["packages/ui/index.ts"],
      "@onvp/unocss": ["packages/ui/unocss/unocss.config.js"],
      "@onvp/ui/*": ["packages/ui/*"]
    }
  },
  "exclude": ["node_modules"]
}
